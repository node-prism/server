{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2021",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "#internal/*": ["src/internal/*"],
      "#shared/*": ["src/shared/*"]
    }
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
